{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ 'task.list.title' | trans }}</h2>
    <ul class="task-global-actions">
        <li class="new">
            <a href="{{ path('task_new') }}" class="btn btn-primary">{{ 'task.link.new' | trans }}</a>
        </li>
    </ul>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'task.table.header.name' | trans }}</th>
                <th>{{ 'task.table.header.description' | trans }}</th>
                <th>{{ 'task.table.header.due_date' | trans }}</th>
                <th>{{ 'task.table.header.actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.dueDate | date('Y-m-d h:i A') }}</td>
                <td>
                    <ul class="task-actions">
                        <li>
                            <a href="{{ path('task_show', { 'id': task.id }) }}" class="btn btn-primary">Details</a>
                        </li>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-success">Edit</a>
                        </li>
                        <li>
                            <a href="{{ path('task_delete', { 'id': task.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure to delete this task?');">Remove</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">Total: {{ tasks | length }}</td>
            </tr>
        </tfoot>
    </table>


{% endblock %}
