{% extends 'base.html.twig' %}
{% block title %}
    {{ 'task.new.title' | trans }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('vendor/jquery-ui/1.11.4/jquery-ui.min.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('vendor/jquery-ui/1.11.4/jquery-ui-timepicker-addon.css') }}">
{% endblock %}
{% block body %}
    <h2>{{ 'task.new.title' | trans }}</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="navbar-form">
        <input type="submit" value="{{ 'global.actions.create' | trans }}" class="btn btn-primary"/>
        <a href="{{ path('task_index') }}" class="btn btn-default">{{ 'global.actions.cancel' | trans }}</a>
    </div>

    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/jquery/2.2.1/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('vendor/jquery-ui/1.11.4/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('vendor/jquery-ui/1.11.4/jquery-ui-timepicker-addon.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/due-date-time-picker.js') }}" type="text/javascript"></script>
{% endblock %}
