{% extends 'base.html.twig' %}
{% block title %}
    Task details - {{ task.name }}
{% endblock %}
{% block body %}
    <h2>Task details</h2>

    <table class="table">
        <tbody>
        <tr>
            <th>Task Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ task.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Due date</th>
            <td>{{ task.dueDate | date('d-m-Y h:i A') }}</td>
        </tr>
        <tr>
            <th>Creation date</th>
            <td>{{ task.creationDate | date('d-m-Y h:i A') }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ task.category }}</td>
        </tr>
        <tr>
            <th>Priority</th>
            <td>{{ task.priority }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ task.status }}</td>
        </tr>
        </tbody>
    </table>


    <ul class="task-actions">
        {% if task.status != 'Closed' %}
            <li>
                <a href="{{ path('task_change_status', { 'id': task.id }) }}" class="btn btn-success">{% if task.status == 'New' %}Start{% else %}Close{% endif %} task</a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-primary">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger"
                   onclick="return confirm('Are you sure to delete this task?');">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('task_index') }}" class="btn btn-default">Back to the list</a>
        </li>
    </ul>

    <h2>Comments</h2>
    <ul>
        <li><a href="#" class="btn btn-primary">Add comment</a></li>
    </ul>
    <ul>
        {% for comment in task.comments %}
        <li>
            <p>{{ comment.comment }}</p>
            <cite>Published on {{ comment.creationDate | date('Y-m-d h:i A') }}</cite>
        </li>
        {% endfor %}
    </ul>
{% endblock %}
